<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>ML Alerts</title>
  <style>
    .alert-card {
      border-left: 8px solid #d00;
      background-color: #ffe6e6;
      padding: 1rem 1.5rem;
      margin-bottom: 1rem;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      animation: fadeIn 0.4s ease-in-out;
    }

    .alert-card h5 {
      margin: 0 0 5px;
      color: #900;
    }

    .timestamp {
      font-size: 0.9rem;
      color: #555;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <h2 class="mb-4 text-center">üö® Machine Learning Alerts</h2>
    
    <div id="alert-container">
      <p class="text-muted text-center">No alerts yet. Waiting for alerts...</p>
    </div>
  </div>

  <%- include('partials/scripts') %>
  <script>
    const socket = io();
    const alertContainer = document.getElementById('alert-container');

    socket.on('ml-alert', (data) => {
      const div = document.createElement('div');
      div.classList.add('alert-card');
      div.innerHTML = `
        <h5>‚ö†Ô∏è ${data.type.toUpperCase()} detected</h5>
        <p class="timestamp">Time: ${new Date(data.time).toLocaleString()}</p>
      `;

      if (alertContainer.firstChild?.tagName === 'P') {
        alertContainer.innerHTML = ''; // remove "Waiting for alerts..." message
      }

      alertContainer.prepend(div);
    });
  </script>
</body>
</html>
